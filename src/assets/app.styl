@import url('https://fonts.googleapis.com/css?family=Indie+Flower|Shadows+Into+Light&display=swap')

.paper
    font-family 'Shadows Into Light', cursive
    font-size 24px
    width 76vw
    height 96vh
    margin  0 
    padding  2vh 10vw 2vh 14vw
    position  relative 
    color  #444 
    line-height  20px 
    background  #fff 
    background  linear-gradient(to bottom, #c3dce8 0px, #ffffff 1px) 0 5vh 
    background-size  100% 20px 
    border-radius  3px 
    box-shadow  0 1px 2px rgba(0,0,0,0.07) 
    &::after
        content  '' 
        position  absolute 
        width  4px 
        top  0 
        right  5vw
        bottom 0
        border 1px solid #e8c6c6
        border-bottom-style none
        border-left-style none
        border-top-style none
        opacity .5
     
    &::before
        content  '' 
        position  absolute 
        width  4px 
        top  0 
        left  10vw
        bottom  0 
        border 1px solid #e8c6c6
        opacity .5
        border-bottom-style none
        border-top-style none
    .playground
        display flex
        flex-wrap wrap
        align-items center
        height 100%
        .pull-right
            text-align right 
            padding-right 10vw
        .info
            transform-origin center center
            transform rotate(10deg)
            color #576280

        .results
            margin-top 2vh
            text-align right
            
            display flex
            flex-wrap wrap
            max-width 400px
            margin 0 auto 0 auto
            &>*
                flex 1 100%
                padding 2vh 0
            .task
                font-size: 180%
            .result
                font-size: 150%
                cursor pointer
                span
                    &:hover
                        font-weight bolder
            .font-red
                color #ff0000
         
    /* Portrait */
    @media screen and (orientation: portrait) 
        .playground
            &>div
                display block
                width 100%
    /* Landscape */
    @media screen and (orientation: landscape)
        .playground
            &>div
                display block
                width 50%